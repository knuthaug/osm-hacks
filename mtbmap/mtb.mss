 #mtb {
    [zoom >= 13] {
    [mtb_scale = '0'] {
       line-color: #00ff22;
       line-width: 3.0;
       line-opacity: 0.5;
  	}
    [mtb_scale = '1'] {
       line-color: #0033ff;
       line-width: 3.0;
       line-opacity: 0.5;
  	}
    [mtb_scale = '2'] {
       line-color: #ff0000;
       line-width: 3.0;
       line-opacity: 0.5;
  	}
    [mtb_scale = '3'] {
       line-color: #666;
       line-width: 3.0;
       line-opacity: 0.5;
  	}
    [mtb_scale = '4'] {
       line-width: 3.0;
       line-color: #ff0000;
  	}
    [mtb_scale = '5'] {
       line-width: 3.0;
       line-color: #ff0000;
  	}
    [mtb_scale = '6'] {
       line-width: 3.0;
       line-color: #ff0000;
  	}
  }

  [zoom >= 15] {
   [mtb_scale = '0'], 
   [mtb_scale = '1'],
   [mtb_scale = '2'], 
   [mtb_scale = '3'], 
   [mtb_scale = '4'], 
   [mtb_scale = '5'], 
   [mtb_scale = '6'] {
    line-width: 5.0;
   }
  } 
}      

