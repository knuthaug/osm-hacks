 #mtb {
    [zoom >= 13] {
    [mtb_scale = '0'] {
       line-color: #00ff22;
  	}
    [mtb_scale = '1'] {
       line-color: #0033ff;
       line-width: 3.0;
       line-opacity: 0.5;
  	}
    [mtb_scale = '2'] {
       line-color: #ff0000;
  	}
    [mtb_scale = '3'] {
       line-color: #666;
  	}
    [mtb_scale = '4'] {
       line-color: #ff0000;
  	}
    [mtb_scale = '5'] {
       line-color: #ff0000;
  	}
    [mtb_scale = '6'] {
       line-color: #ff0000;
  	}
  }
}      

